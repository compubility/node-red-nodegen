<script type="text/javascript">
    RED.nodes.registerType("{{name}}", {
        category: "{{tag}}",
        color: "#87A980",
        defaults: {
            name: { value: "" }
        },
        inputs: 1,
        outputs: 1,
        icon: "font-awesome/fa-cloud",
        label: function () {
            return this.name || "{{summary}}";
        }
    });
</script>

<script type="text/html" data-template-name="node-type-{{name}}">
    <div class="form-row">
        <label for="node-input-name"><i class="icon-tag"></i> Name</label>
        <input type="text" id="node-input-name" placeholder="{{summary}}">
    </div>
</script>
